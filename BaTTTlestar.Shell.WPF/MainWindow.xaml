<Window x:Class="BaTTTlestar.Shell.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BaTTTlestar" Height="350" Width="525"
        Loaded="MainWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" IsMainMenu="True">
            <MenuItem Header="Player 1">
                <MenuItem Header="Human" IsCheckable="True" Click="ChangePlayer" />
                <MenuItem Header="Easy" IsCheckable="True" IsChecked="True" Click="ChangePlayer" />
                <MenuItem Header="Medium" IsCheckable="True" Click="ChangePlayer" />
                <MenuItem Header="Hard" IsCheckable="True" Click="ChangePlayer" />
            </MenuItem>
            <MenuItem Header="Player 2">
                <MenuItem Header="Human" IsCheckable="True" Click="ChangePlayer" />
                <MenuItem Header="Easy" IsCheckable="True" Click="ChangePlayer" />
                <MenuItem Header="Medium" IsCheckable="True" Click="ChangePlayer" />
                <MenuItem Header="Hard" IsCheckable="True" IsChecked="True" Click="ChangePlayer" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Grid.Column="0" Stretch="Uniform" />
            <Image Grid.Row="0" Grid.Column="1" Stretch="Uniform" />
            <Image Grid.Row="0" Grid.Column="2" Stretch="Uniform" />
            <Image Grid.Row="1" Grid.Column="0" Stretch="Uniform" />
            <Image Grid.Row="1" Grid.Column="1" Stretch="Uniform" />
            <Image Grid.Row="1" Grid.Column="2" Stretch="Uniform" />
            <Image Grid.Row="2" Grid.Column="0" Stretch="Uniform" />
            <Image Grid.Row="2" Grid.Column="1" Stretch="Uniform" />
            <Image Grid.Row="2" Grid.Column="2" Stretch="Uniform" />

        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Name="NextMoveButton" Click="NextMove">
                Next move
            </Button>
            <TextBlock Grid.Row="1" Name="StatusBlock">
                Game is ongoing...
            </TextBlock>
        </Grid>

    </Grid>
</Window>
